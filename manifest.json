{
  "manifest_version": 3,
  "name": "Midori Kage - WA Scraper (TS)",
  "version": "2.0.0",
  "description": "WhatsApp Web Scraper Extension (Strict TypeScript)",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Midori Kage Control"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["src/scripts/content.ts"]
    }
  ]
}
